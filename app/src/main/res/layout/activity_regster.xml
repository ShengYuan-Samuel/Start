<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/register_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/register_return"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_kuaisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入手机号，快速注册"/>

        <com.jiyun.start.view.ClearEditText
            android:id="@+id/regsiter_phone"
            android:layout_below="@id/tv_kuaisu"
            android:layout_width="280dp"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:hint="输入手机号"
            android:maxLength="11"
            />
        <LinearLayout
            android:id="@+id/lin_layout1"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/regsiter_phone">
            <com.jiyun.start.view.ClearEditText
                android:id="@+id/register_phoneCode"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:hint="输入验证码"/>
            <TextView
                android:id="@+id/get_registerCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
       <LinearLayout
           android:id="@+id/lin_layout2"
           android:layout_width="280dp"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_below="@id/lin_layout1"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:text="注册表示你同意"
               android:textColor="#96979E"
               android:textSize="12sp"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/regsiter_fuwuxieyi"
               android:layout_width="wrap_content"
               android:text="UnivStar服务使用协议"
               android:textColor="#242424"
               android:textSize="12sp"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <Button
            android:id="@+id/register_registerbtn"
            android:layout_width="280dp"
            android:text="注册"
            android:enabled="true"
            android:textSize="16sp"
            android:layout_below="@id/lin_layout2"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_btu"
            android:layout_height="48dp" />


        <LinearLayout
            android:layout_width="280dp"
            android:layout_below="@id/register_registerbtn"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/weixin_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="微信"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/qq_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/qq"/>
                <TextView
                    android:layout_width="wrap_content"

                    android:text="QQ登录"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/weibo_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/weibo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="微博"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>




</LinearLayout> 

